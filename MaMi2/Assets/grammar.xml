<?xml version="1.0" encoding="utf-8" ?>
<grammar
  version="1.0"
  xml:lang="en-GB"
  root="automationCommands"
  xmlns="http://www.w3.org/2001/06/grammar"
  tag-format="semantics/1.0">

  <rule id="automationCommands">
    <item>
      <item>
        <ruleref uri="#showAction" />
        <tag> out.command=rules.latest(); </tag>
      </item>
      <item>
        <ruleref uri="#whattoshow" />
        <tag> out.direction=rules.latest(); </tag>
      </item>
    </item>
  </rule>

  <rule id="showAction">
    <one-of>
      <item>
        <tag> out="SHOW"; </tag>
        <one-of>
          <item>show</item>
          <item>view</item>
          <item>go</item>
          <item>open</item>
          <item>play</item>
        </one-of>
      </item>
    </one-of>
  </rule>

  <rule id="whattoshow">
    <item>
      <one-of>
        <item>
          <tag> out="NEWS"; </tag>
          <one-of>
            <item>news</item>
          </one-of>
        </item>
        <item>
          <tag> out="SCHEDULE"; </tag>
          <one-of>
            <item>schedule</item>
            <item>todo</item>
            <item>calendar</item>
          </one-of>
        </item>
      <item>
          <tag> out="HOME"; </tag>
          <one-of>
            <item>home</item>
            <item>back</item>
            <item>start</item>
          </one-of>
        </item>
        <item>
          <tag> out="RADIO"; </tag>
          <one-of>
            <item>radio</item>
            <item>music</item>
          </one-of>
        </item>
      </one-of>
    </item>
  </rule>
</grammar>