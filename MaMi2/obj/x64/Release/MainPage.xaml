<Page
    x:Class="MaMi2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaMi2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <TextBlock x:ConnectionId='1' x:Name="tbTime" HorizontalAlignment="Right" Margin="0,15,0,0" Text="10:33" VerticalAlignment="Top" Height="149" Width="357" Foreground="White" FontSize="120" FontWeight="Light" TextAlignment="Right"/>
        <TextBlock x:ConnectionId='2' x:Name="tbDate" HorizontalAlignment="Right" Margin="0" Text="Fredag 10 December" VerticalAlignment="Top" Height="64" Width="694" Foreground="#FFB9B9B9" FontSize="40" FontWeight="Light" TextAlignment="Right" />
        <TextBlock x:ConnectionId='3' x:Name="tbTemp" HorizontalAlignment="Right" Margin="0,137,10,0" Text="3°" VerticalAlignment="Top" Height="149" Width="357" Foreground="#FFB1AEF1" FontSize="80" FontWeight="Light" TextAlignment="Right"/>
        <TextBlock x:ConnectionId='4' x:Name="tbMainMessage" HorizontalAlignment="Left" Margin="0" Text="Idag blir en bra dag" VerticalAlignment="Bottom" Height="156" Width="885" Foreground="White" FontSize="110" FontWeight="ExtraLight" TextAlignment="Center" FontStretch="Condensed" LineStackingStrategy="BaselineToBaseline" CharacterSpacing="-30" />
        <TextBlock x:ConnectionId='5' x:Name="tbSecMessage" HorizontalAlignment="Left" Margin="0,0,0,122" Text="God morgon" VerticalAlignment="Bottom" Height="92" Width="885" Foreground="#FFC5C5C5" FontSize="48" FontWeight="ExtraLight" TextAlignment="Center" FontStretch="Condensed" CharacterSpacing="-30" TextWrapping="WrapWholeWords" MaxLines="5" />
        <TextBlock x:ConnectionId='6' x:Name="tbSun" HorizontalAlignment="Right" Margin="0,233,4,0" Text="10:10 - 22:22" VerticalAlignment="Top" Height="64" Width="760" Foreground="#FFEDF0CF" FontSize="40" FontWeight="Light" TextAlignment="Right" />
        <StackPanel x:ConnectionId='7' Orientation="Horizontal"                            Margin="0,297,38,235" HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Storyboard x:ConnectionId='10' x:Name="rect2Storyboard">
                    <DoubleAnimation 
                Storyboard.TargetName="tf"
                Storyboard.TargetProperty="(UIElement.Transform3D).(CompositeTransform3D.RotationY)"
                From="0" To="360" AutoReverse="True" Duration="0:0:15">
                        <DoubleAnimation.EasingFunction>
                            <SineEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation 
                Storyboard.TargetName="gf"
                Storyboard.TargetProperty="(UIElement.Transform3D).(CompositeTransform3D.RotationY)"
                From="0" To="360" AutoReverse="True" Duration="0:0:15">
                        <DoubleAnimation.EasingFunction>
                            <SineEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>

                    </DoubleAnimation>
                    <DoubleAnimation 
                Storyboard.TargetName="bf"
                Storyboard.TargetProperty="(UIElement.Transform3D).(CompositeTransform3D.RotationY)"
                From="0" To="360" AutoReverse="True" Duration="0:0:15">
                        <DoubleAnimation.EasingFunction>
                            <SineEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </StackPanel.Resources>
            <StackPanel.Transform3D>
                <PerspectiveTransform3D Depth="400" />
            </StackPanel.Transform3D>
            <Rectangle x:ConnectionId='11' x:Name="tf" Margin="20,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="80" Width="120" Fill="#999b59b6" Stroke="#CC9b59b6" RadiusY="2" RadiusX="2" StrokeThickness="4">
                <Rectangle.Transform3D>
                    <CompositeTransform3D RotationX="-60" RotationY="-10" TranslateZ="-75" CenterX="60" CenterY="40" />
                </Rectangle.Transform3D>
            </Rectangle>
            <Rectangle x:ConnectionId='12' x:Name="bf" Margin="-120,40,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="80" Width="120" Fill="#993498db"  Stroke="#CC3498db" RadiusY="2" RadiusX="2" StrokeThickness="4">
                <Rectangle.Transform3D>
                    <CompositeTransform3D RotationX="-60" RotationY="-10" TranslateZ="-75" CenterX="60" CenterY="40" />
                </Rectangle.Transform3D>
            </Rectangle>
            <Rectangle x:ConnectionId='13' x:Name="gf" Margin="-120,60,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="80" Width="120" Fill="#9927ae60" Stroke="#CC27ae60" RadiusY="2" RadiusX="2" StrokeThickness="4">
                <Rectangle.Transform3D>
                    <CompositeTransform3D RotationX="-60" RotationY="-10" TranslateZ="-75" CenterX="60" CenterY="40" />
                </Rectangle.Transform3D>
            </Rectangle>
        </StackPanel>
        <TextBlock x:ConnectionId='8' x:Name="tbLastNews" HorizontalAlignment="Left" Margin="0,35,0,0" Text="Här kommer nyhet" VerticalAlignment="Top" Height="98" Width="885" Foreground="#FF7A7A7A" FontSize="48" FontWeight="ExtraLight" TextAlignment="Center" FontStretch="Condensed" CharacterSpacing="-30" TextWrapping="WrapWholeWords" MaxLines="5" />
        <TextBlock x:ConnectionId='9' x:Name="tbOldNews" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Här kommer gammal nyhet" VerticalAlignment="Top" Height="67" Width="885" Foreground="#FF515151" FontSize="36" FontWeight="ExtraLight" TextAlignment="Center" FontStretch="Condensed" CharacterSpacing="-30" TextWrapping="WrapWholeWords" MaxLines="5" />
    </Grid>
</Page>

